{
  "name": "captain-app",
  "version": "1.0.0",
  "description": "This Node.js app ('Captain') acts as a public DNS failover orchestrator. It monitors health of services and updates DNS records according to the health of each upstream address. It can run stand-alone or be accompanied by any number of 'Mates' which are used to report remote services and perform remote health checks on those services.",
  "main": "index.js",
  "private": true,
  "type": "module",
  "scripts": {
    "lint": "tsc",
    "dev": "nodemon",
    "build": "tsc -p tsconfig.json",
    "test": "jest --coverage",
    "docker:dev": "docker-compose -f docker-compose-dev.yml -p captain-app-dev up --build",
    "docker:prod": "docker-compose -f docker-compose-prod.yml -p captain-app-prod up --build",
    "docker:test": "docker-compose -f docker-compose-test.yml -p captain-app-test up --build"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "joi": "^17.11.0",
    "express": "^4.18.2"    
  },
  "devDependencies": {
    "@types/node": "^20.10.1",
    "@types/express": "^4.17.21",    
    "nodemon": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.3.2"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ignore": [
      "src/**/*.test.ts"
    ],
    "ext": "ts,mjs,js,json,graphql",
    "exec": "tsc -p tsconfig.json && node ./dist/index.js",
    "legacyWatch": true
  }
}
