{
  "name": "captain-app",
  "version": "1.0.0",
  "description": "This Node.js app ('Captain') acts as a public DNS failover orchestrator. It monitors health of services and updates DNS records according to the health of each upstream address. It can run stand-alone or be accompanied by any number of 'Mates' which are used to report remote services and perform remote health checks on those services.",
  "main": "index.js",
  "private": true,
  "type": "module",
  "scripts": {
    "lint:tsc": "tsc â€”noEmit",
    "lint:eslint": "eslint --ext .js,.ts src",
    "dev": "nodemon",
    "build": "tsc -p tsconfig.json",
    "test": "jest --coverage",
    "docker:dev": "docker compose -f docker-compose-dev.yml -p dns-orchestrator-dev up --build --remove-orphans -d",
    "docker:dev:stop": "docker compose -f docker-compose-dev.yml -p dns-orchestrator-dev stop",
    "docker:dev:rm": "docker compose -f docker-compose-dev.yml -p dns-orchestrator-dev rm -f -s -v"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "nanoid": "^5.0.4",
    "socket.io": "^4.7.2",
    "socket.io-client": "^4.7.2",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.1",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-standard": "^5.0.0",
    "nodemon": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "2.3.2",
    "typescript": "^5.3.2"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ignore": [
      "src/**/*.test.ts"
    ],
    "ext": "ts,mjs,js,json,graphql",
    "exec": "tsc -p tsconfig.json && node --enable-source-maps ./dist/index.js",
    "legacyWatch": true
  }
}
